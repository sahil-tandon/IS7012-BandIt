@page
@model CountryProfileModel
@{
}
<h1>
    Destination Description
</h1>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Id</th>
            <th>Destination Name</th>
            <th>Climate</th>
            <th>Food</th>
            <th>Cost</th>
            <th>Peak Season Start</th>
            <th>Country</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var code in Model.Country.Destination) {
        <tr>
            <td>@code.Id</td>
            <td>@code.Name</td>
            <td>@code.Climate</td>
            <td>@code.Food</td>
            <td>@code.Cost</td>
            <td>@code.PeakSeasonStart</td>
            <td>@Model.Country.Name</td>
        </tr>
        }
    </tbody>
</table>