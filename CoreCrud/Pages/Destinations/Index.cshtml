<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Destination[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Destination[0].Climate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Destination[0].Food)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Destination[0].Cost)
            </th>
