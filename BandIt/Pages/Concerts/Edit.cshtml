@page
@model BandIt.Pages.Concerts.EditModel

@{
    ViewData["Title"] = "Edit";
}

<div class="container">
    <h2>Edit</h2>

    <h4>Concert</h4>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Concert.Id" />
                <div class="form-group">
                    <label asp-for="Concert.ConcertName" class="control-label"></label>
                    <input asp-for="Concert.ConcertName" class="form-control" />
                    <span asp-validation-for="Concert.ConcertName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Concert.Venue" class="control-label"></label>
                    <input asp-for="Concert.Venue" class="form-control" />
                    <span asp-validation-for="Concert.Venue" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Concert.Date" class="control-label"></label>
                    <input asp-for="Concert.Date" class="form-control" />
                    <span asp-validation-for="Concert.Date" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Concert.TicketPrice" class="control-label"></label>
                    <input asp-for="Concert.TicketPrice" class="form-control" />
                    <span asp-validation-for="Concert.TicketPrice" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Concert.BandID" class="control-label"></label>
                    <select asp-for="Concert.BandID" class="form-control" asp-items="ViewBag.BandID"></select>
                    <span asp-validation-for="Concert.BandID" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-default" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-page="./Index">Back to List</a>
    </div>

    @section Scripts {
        @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    }
</div>